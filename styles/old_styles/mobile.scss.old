@import '_variables';


* {
    box-sizing: border-box;
    outline: 0;
}

html,
body {
    width: 100%;
    font-family: Roboto;
    background-color: #E5E5E5;
}

.nav {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: black;
    opacity: 50%;
    position: fixed;
    z-index: 4;
    top: 0;
    height: 62px;
    width: 100%;

    .name a {
        text-decoration: none;
        color: white;
        margin-left: 35px;
    }

    .burger {
        height: 20px;
        width: 25px;
        margin-right: 35px;
    }
    
    .nav-links{
        display: none;
    }

    #navLinks{
        position: absolute;
        right: 0;
        top: 62px;
        height: 100vh;
        width: 40%;
        background-color: inherit;
        color: white;
        // z-index: 4;
        display: none;
        div{
            padding: 10px;
            cursor: pointer;
            color: white;
        }

        .icons{
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
        }

    }
}

.page-top {

    background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.5)), url(../images/header-image.png);
    background-repeat: no-repeat;
    background-size: cover;
    height: 660px;


    .heading-box {
        text-align: center;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        margin-left: 24px;
        margin-right: 24px;
        position: relative;

        .heading {
            font-weight: 500;
            font-size: 42px;
            line-height: 55px;
            text-align: center;
            margin-bottom: 10px;
        }

        .heading-text {
            font-size: 16px;
            font-weight: 400;
            line-height: 21px;
        }

        .headingBtn {
            background-color: red;
            height: 54px;
            width: 171px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            margin-top: 40px;

            img {
                margin-right: 5px;
            }
        }

        .white-container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .white {
            background-color: white;
            width: 90vw;
            height: 50px;
            position: absolute;
            bottom: 0;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;

        }
    }
}

.container {
    background-color: white;
    width: 90vw;
    margin: auto;
    margin-bottom: 30px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    box-shadow: 3px 7px 22px 1px rgba(0, 0, 0, 0.54);


    .main-text {
        text-align: center;
        margin-left: 12px;
        margin-right: 12px;
        margin-bottom: 50px;

        .main-photo {
            display: none;
        }

        .main-text-heading {
            font-size: $heading-size;
            font-weight: $heading-weight;
            margin-bottom: 20px;
        }

        .main-text-p {
            font-size: $subText-size;
            line-height: $subText-lineheight;
            font-weight: $subText-weight;
        }
    }

    .skills {
        text-align: center;
        // margin: auto;
        margin-left: 12px;
        margin-right: 12px;
        margin-bottom: 50px;
        // width: 95%;

        h2 {
            font-size: $heading-size;
            font-weight: $heading-weight;
            margin-bottom: 20px;
        }

        img {
            margin-bottom: 31px;
        }

        :not(:last-child) {
            margin-bottom: 30px;
        }

        .skills-subheading {
            font-size: $subheading-size;
            font-weight: $subheading-weight;
        }

        .skills-text {
            font-size: $subText-weight;
            font-weight: $subText-weight;
            line-height: $subText-lineheight;
        }
    }

    .projects {

        display: flex;
        flex-direction: column;
        // justify-content: center;
        align-items: center;
        margin-left: 12px;
        margin-right: 12px;
        // width: 95%;
        // margin: auto;

        .projects-heading {
            font-size: $heading-size;
            font-weight: $heading-weight;
            margin-bottom: 20px;
        }

        .project {
            img {
                margin-bottom: 11px;
                width: 100%;
            }

            .project-name {
                font-weight: 500;
                font-size: 18px;
            }
        }

        :not(:last-child) {
            margin-bottom: 22px;
        }

    }

    .contact {

        display: flex;
        flex-direction: column;
        align-items: center;

        .contact-heading {
            font-size: $heading-size;
            font-weight: $heading-weight;
            margin-bottom: 20px;
            margin-top: 50px;
        }

        .contact-icons {
            margin-bottom: 37px;
        }

        .contactBtn {
            width: 148px;
            height: 41px;
            background-color: #9C27B0;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px;
            box-shadow: 3px 7px 13px -3px rgba(0, 0, 0, 0.72);
            margin-bottom: 50px;
        }
    }
}

.footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 55%;
    margin: auto;

    .footer-links {
        width: 100%;
        margin-bottom: 20px;

        ul {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        li {
            display: inline;

            a {
                text-decoration: none;
                color: #3C4858;
                font-size: 12px;
                font-weight: 500;
                text-transform: uppercase;
            }
        }
    }

    .copyright {
        font-size: 14px;
        font-weight: 400;
        margin-bottom: 30px;
    }
}

@import 'tablet';
@import 'desktop'