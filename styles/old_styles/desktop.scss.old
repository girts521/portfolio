@media screen and(min-width:1440px) {
    .page-top {

        .heading-box {

            .heading {
                margin-left: 150px;
                font-size: 53px;
            }

            .heading-text {
                max-width: 50%;
                margin-left: 150px;
            }

            .headingBtn {
                margin-left: 150px;
            }
        }
    }

    .container{

        .main-text{
            display: flex;
            flex-direction: row;
            align-items: center;
            margin: auto;
            margin-bottom: 90px;
            padding-top: 30px;
            max-width: 70%;

                .main-photo{
                    display: block;
                    margin-right: 95px;
                }

                .main-text-heading{
                    margin-bottom: 30px;
                    font-size: 36px;
                }
        }

        .skills {

            .skills-heading{
                font-size: 36px;
            }
        }

        .projects{

            .projects-heading{
                font-size: 36px;
            }

            .project-box{
                grid-template-columns: repeat(3,1fr);
            }
        }

        .contact{

            .contact-heading{
                font-size: 36px;
            }
        }
    }
}